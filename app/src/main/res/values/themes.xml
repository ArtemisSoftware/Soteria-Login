<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SoteriaLogin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="title" >
        <item name="android:textSize">50sp</item>
        <item name="android:fontFamily">@font/indigo_daisy</item>
    </style>

    <style name="subtitle" parent="TextAppearance.MaterialComponents.Body2" >
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="regularText" >
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="mediumText" >
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>


    <style name="editText" >
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:background">@drawable/edit_custom</item>
    </style>

    <style name="button" >
        <item name="android:background">@drawable/btn_custom</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

</resources>